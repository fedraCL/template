<!DOCTYPE html>
<html>
<head>
	<title>.:: FEDRA ::.</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">FEDRA</a>
			</div>
			<ul class="nav navbar-nav">
				<% if user_signed_in? %>
				<li><%= link_to 'Home', root_path, { :class=>"navbar-brand" }  %></li>
				<li><%= link_to 'Mantenedores', mantenedors_path, { :class=>"navbar-brand" }  %></li>
				<%end%>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
				
				<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
				<li><%= link_to "Log Out", logout_path %></li>
				<% else %>
				<li><%= link_to "Sign In", login_path %></li>
				<li><%= link_to "Register", register_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="container">
		<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %> alert-dismissable">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<p><%= message %></p>
		</div>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
